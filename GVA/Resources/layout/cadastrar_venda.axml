<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="30dp">
	<LinearLayout
		android:orientation="horizontal"
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:weightSum="4"
		android:id="@+id/linearLayout3">
		<ImageView
			android:src="@android:drawable/ic_menu_gallery"
			android:layout_height="140dp"
			android:id="@+id/imageView1"
			android:layout_width="0dp"
			android:layout_weight="1" 
			android:foregroundGravity="center_horizontal"/>
		<EditText
			android:inputType="textMultiLine"
			android:layout_width="0dp"
			android:layout_weight="3" 
			android:layout_height="match_parent"
			android:id="@+id/txtDescricao"
			android:hint="Descrição"
			android:textColorHint="#ffae80d0"
			android:backgroundTint="#ffbba5e1"
			android:textColor = "@color/colorTexto"
			android:foregroundGravity="bottom"
			android:gravity="bottom" />
	</LinearLayout>
	<Spinner
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:textColor = "@color/colorTexto"
		android:textColorHint="#ffae80d0"
		android:backgroundTint="#ffbba5e1"
		android:id="@+id/spinnerCliente" />
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background = "#ffbba5e1"
		android:id="@+id/linearLayout4" />
	
	<EditText
		android:inputType="numberDecimal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColorHint="#ffae80d0"
		android:hint="Valor"
		android:id="@+id/txtValor"
		android:textColor = "@color/colorTexto"
		android:backgroundTint="#ffbba5e1"/>
	<LinearLayout
		android:orientation="horizontal"
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:weightSum="4"
		android:layout_height="wrap_content"
		android:id="@+id/linearLayout1">
		<EditText
			android:inputType="date"
			android:layout_width="0dp"
			android:layout_weight="2" 
			android:textColorHint="#ffae80d0"
			android:hint="Data Venda"
			android:backgroundTint="#ffbba5e1"
			android:layout_height="match_parent"
			android:textColor = "@color/colorTexto"
			android:id="@+id/txtDataVenda"
			 />
		<EditText
			android:inputType="date"
			android:layout_width="0dp"
			android:layout_weight="2" 
			android:layout_height="match_parent"
			android:id="@+id/txtDataVencimento"
			android:textColorHint="#ffae80d0"
			android:textColor = "@color/colorTexto"
			android:hint="Data Vencimento"
			android:backgroundTint="#ffbba5e1"
			 />
	</LinearLayout>
	<EditText
		android:inputType="date"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColorHint="#ffae80d0"
		android:hint="Data Pagamento"
		android:textColor = "@color/colorTexto"
		android:backgroundTint="#ffbba5e1"
		android:id="@+id/txtDataPagamento" />
	<LinearLayout
		android:orientation="horizontal"
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/linearLayout2"
		android:fadingEdge="horizontal"
		android:foregroundGravity="center"
		android:gravity="center"
		android:paddingTop="50px">
		<Button
			android:text="Cancelar"
			android:layout_width="100dp"
			android:layout_height="match_parent"
			android:id="@+id/btnCancelarVenda"
			android:background="@color/button"
			android:textSize="15dp"
			android:textColor="#ffffffff"/>
		<Space
			android:layout_width="30dp"
			android:layout_height="match_parent"
			android:id="@+id/space1" />
		<Button
			android:text="Salvar"
			android:layout_width="100dp"
			android:layout_height="match_parent"
			android:id="@+id/btnSalvarVenda"
			android:background="@color/button"
			android:textColor="#ffffffff"
			android:textSize="15dp" />
	</LinearLayout>
	<LinearLayout
		android:visibility="invisible" 
		android:orientation="horizontal"
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/linearApagar"
		android:fadingEdge="horizontal"
		android:foregroundGravity="center"
		android:gravity="center"
		android:paddingTop="40px">
		<Space
				android:layout_width="5dp"
				android:layout_height="match_parent"
				android:id="@+id/space4" />
		<Button
			android:text="Apagar"
			android:layout_width="100dp"
			android:layout_height="match_parent"
			android:id="@+id/btnApagarVenda"
			android:background="@color/button"
			android:textColor="#ffffffff"
			android:textSize="15dp" />
	</LinearLayout>
	
</LinearLayout>
